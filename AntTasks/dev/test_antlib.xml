<project name="TEST_ANTLIB" basedir=".."
         default="1. test MultipleInput"
         xmlns:cgtools="antlib:org.cgtools.anttasks.ant">

  <!-- ADD CGAntTasks.jar TO THE ANT DEPENDENCIES -->

  <target name="1. test MultipleInput">
    <cgtools:minput message="Enter the following values:" length="25">
      <inputline label="Label A: " text="AAAAAAA" property="test.result.1"/>
      <inputline label="Label B: " property="test.result.2"/>
      <inputline label="" property="test.result.3"/>
      <inputline label="Label...........................D: " property="test.result.4"/>
    </cgtools:minput>

    <echo>
      RESULT:

      ${test.result.1}
      ${test.result.2}
      ${test.result.3}
      ${test.result.4}
    </echo>
  </target>

</project>